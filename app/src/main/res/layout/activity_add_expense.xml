<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView3"
            style="@style/App.ImageView"
            android:contentDescription="@string/app_name"
            android:src="@drawable/mylogo"
            android:layout_marginBottom="8dp" />

        <!-- Amount -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/App.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/amount"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#88000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Currency Spinner: touch target >= 48dp -->
        <Spinner
            android:id="@+id/spinnerCurrency"
            style="@style/Form.Spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="12dp" />

        <!-- Category Spinner: touch target >= 48dp -->
        <Spinner
            android:id="@+id/spinnerCategory"
            style="@style/Form.Spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="8dp" />

        <!-- Remark -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/App.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/remark"
                android:inputType="textCapSentences"
                android:textColor="#000000"
                android:textColorHint="#88000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Date -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/App.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/created_date"
                android:inputType="none"
                android:textColor="#000000"
                android:textColorHint="#88000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Add button -->
        <Button
            android:id="@+id/btnAddExpense"
            style="@style/App.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#0D47A1"
            android:textColor="#FFFFFF"
            android:text="@string/add_expense" />

    </LinearLayout>
</ScrollView>
